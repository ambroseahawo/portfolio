---
interface Props {
  tutorials: {
    title: string
    coverImage: string
    featured: boolean
  }[]
  isFeatured?: boolean
}

const { tutorials, isFeatured = false } = Astro.props

const displayTutorials = isFeatured
  ? tutorials.filter((tutorial) => tutorial.featured).slice(0, 2)
  : tutorials

const showHeading = isFeatured === true && displayTutorials.length > 0
---

<section>
  {
    showHeading ? (
      <h2 class="cpynq c670g c8dzi cme53">Featured Tutorials</h2>
    ) : null
  }

  <!-- Cards -->
  <div class="c2bf0 cuyx0 ci65n cgdgh ceazt">
    {
      displayTutorials.map((tutorial) => (
        <a
          class={`ck1rl cegol cth4i c08dn ${isFeatured ? "czh94 c1gvt" : ""} c6iwv c9ic7 crprk cpa9f c9alu chtu4 czz51 cjci4 c5c77`}
          href="#0"
        >
          <img
            class="c8c2x c8bmc chzqd c5u91 cglmn c8pgj"
            src={tutorial.coverImage}
            width="336"
            height="189"
            alt="Popular post 01"
          />
          <div class="cpk71 cf0v5 c736y c9noy c5c77 c0bc4 cglmn cfwvb c5oxi">
            <div class="c5a0p cpynq c670g craoz c5rvt cew4t cfwvb">
              {tutorial.title}
            </div>
            <div class="creo2 cldiu c8pgj cew4t cfwvb">
              <svg xmlns="http://www.w3.org/2000/svg" width="41" height="41">
                <circle
                  class="crdeu"
                  cx="20"
                  cy="20"
                  r="20"
                  fill-opacity=".88"
                />
                <path
                  class="c22wf"
                  d="m24.765 19.5-6.263-4.375a.626.626 0 0 0-1.002.5v8.75c0 .5.564.812 1.002.5l6.263-4.375a.65.65 0 0 0 0-1Z"
                />
              </svg>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</section>
