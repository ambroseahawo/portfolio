  <div class="c92wf">
    <!-- Newsletter widget -->
    {
      showNewsLetter ? (
        <NewsLetter />
      ) : null
    }

    <!-- Sponsor widget -->
    {
      showSponsorWidget ? (
        <div class="cg3vi cj965 cry3b c81t6 cax03 c1gvt czh94 czz51 c90wr c5oxi">
          <div class="c5a0p ckgwf c4udf cfwvb">
